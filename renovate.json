{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Kolkata",
  "schedule": [
    "* 10 * * 0,5,6"
  ],
  "packageRules": [
    {
      "matchDatasources": ["kubernetes"],
      "matchPackageNames": ["/^ghcr.io/hotio//"],
      "versionCompatibility": "^(?<compatibility>[^-]+)-v?(?<version>\\d+\\.\\d+\\.\\d+)$",
    },
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "helmv3": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  }
}
