{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Kolkata",
  "schedule": [
    "* 10 * * 0,5,6"
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: ['Pulumi.yaml'],
      matchStrings: [
        "name: \"(?<depName>.*?):(?<currentValue>.*?)\" }\); #\s*renovate\n"
      ],
      datasourceTemplate: 'docker',
    },
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "helmv3": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  }
}
